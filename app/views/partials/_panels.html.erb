<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <% for question in @question_open %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading-<%= question.id %>">
      <h3 class="latobold question-main navy"><a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= question.id %>" aria-expanded="true" aria-controls="collapse-<%= question.id %>"><%= question.name %></a></h3>
    </div>
    <div id="collapse-<%= question.id %>" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading->%= question.id %>">
      <div class="panel-body">
        <p class="latolight question-text"><%= sanitize question.answer %></p>
      </div>
    </div>
  </div>
  <% end %>
  <% for question in @questions_closed %>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="heading-<%= question.id %>">
      <h3 class="latobold question-main navy"><a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= question.id %>" aria-expanded="true" aria-controls="collapse-<%= question.id %>"><%= question.name %></a></h3>
    </div>
    <div id="collapse-<%= question.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading->%= question.id %>">
      <div class="panel-body">
        <p class="latolight question-text"><%= sanitize question.answer %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>