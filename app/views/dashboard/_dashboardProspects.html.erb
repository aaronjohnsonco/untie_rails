<div class="container-fluid">
	<div class="dashboard-box-top">
	<div class="row">
		<div class="col-md-12">
			<h2 class="main-heading latolight sky-blue">Prospects</h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<p class="latolight">Click on name to view full details</p>
		<div class="table-responsive">
			<table class="table table-hover">
				<tr>
					<th class="latobold main-text">Name</th>
					<th class="latobold main-text">Received</th>
					<th class="latobold main-text">Type</th>
					<th class="latobold main-text">Conflict Status</th>
					<th class="latobold main-text"></th>
				</tr>
				<% for prospect in @prospects %>
					<tr>
						<td class="latoregular sky-blue"><%= link_to prospect.full_name, "", data: {toggle: "modal", target: "#prospectModal-#{prospect.id}"} %></td>
						<td class="latoregular"><%= prospect.created_at.strftime('%B %-d, %Y') %>	</td>
						<td class="latoregular"><%= prospect.option %></td>
						<td class="latoregular"><a href="#" id="status" data-type="select" data-resource="prospect" data-name="status" data-url="/prospects/<%= prospect.id %>" data-original-title="Edit status"><%= prospect.status %></a></td>




						<td>
									<%= link_to prospect, method: :delete, data: {confirm: "Are you sure?" } do %>
										<span class="glyphicon glyphicon-remove pull-right" aria-hidden="true"></span>
									<% end %>
								</td>
					</tr>




<!-- Modal -->
<div class="modal fade" id="prospectModal-<%= prospect.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="myModalLabel"><%= prospect.option %></h4>
      </div>
      <div class="modal-body">

      	<p class="latoblack large-text"><%= prospect.full_name %></p>
      	<p class="latolight main-text"><span class="latobold">Email: </span><%= prospect.email %></p>
      	<p class="latolight main-text"><span class="latobold">Phone: </span><%= prospect.phone %></p>
      	<p class="latolight main-text"><span class="latobold">Address: </span><br>
      		<%= prospect.street %><br>
      		<%= "#{prospect.city}" + ", " + "#{prospect.state}" + " #{prospect.zip} " %></p>

      	<p class="latolight main-text"><span class="latobold">Resided there how long?: </span><%= prospect.resided_how_long %></p>

      	<% if prospect.number_of_children.present? %>
      		<p class="latolight main-text"><span class="latobold">Number of children: </span><%= prospect.number_of_children %></p>
      		<p class="latolight main-text"><span class="latobold">Ages: </span><%= prospect.ages %></p>
      	<% end %>

      	<% if prospect.co_own_property.present? || prospect.co_own_business.present? %>
      		<p class="latolight main-text"><span class="latobold">Co-Owns Property: </span><%= prospect.co_own_property %></p>
      		<p class="latolight main-text"><span class="latobold">Co-Owns Business: </span><%= prospect.co_own_business %></p>
      	<% end %>





      </div>
      <!--<div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-navy">Save changes</button>
      </div>-->
    </div>
  </div>
</div>
				<% end %>

			</table>
			<%= paginate @prospects, :theme => 'twitter-bootstrap-3' %>
		</div>
	</div>
</div>
</div>
</div>


