<div class="container-fluid">
	<div class="dashboard-box-top">
	<div class="row">
		<div class="col-md-12">
			<h2 class="main-heading latolight sky-blue">New Post</h2>
		</div>
	</div>
	<div class="row">
		<%= form_for Post.new do |f| %>
		<div class="col-md-8">
			<div class="form-group">
				<%= f.text_field :title, class: "form-control-post-title", placeholder: "Post Title", autofocus: true %>
			</div>
			<div class="form-group">
				<%= f.text_area :body, class: "form-control redactor", required: "required" %>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<label>Author</label>
				<%= f.text_field :author, class: "form-control", value: "Connie Chadwick" %>
			</div>
			<div class="form-group">
				<label>Tags</label>
				<%= f.text_field :all_tags, class: "form-control", placeholder: "Tags separated by a comma" %>
			</div>
			<div class="form-group" id="date_picker">
				<label>Publication Date</label>
				<%= f.text_field :pub_date, class: "form-control", placeholder: "Click for calendar" %>
			</div>
			<%= f.submit "Publish Now", class: "btn btn-navy", name: "publish" %>
			<%= f.submit "Save as Draft", class: "btn btn-default", name: "draft" %>

			
			
  
  <div class="tag_cloud">
  	<h3 class="latobold">Used tags:</h3>
    <% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
      <p class="tag-box"><%= tag.name %></p>
    <% end %>
  </div>
		</div>

		<% end %>

		
	</div>
</div>
</div>