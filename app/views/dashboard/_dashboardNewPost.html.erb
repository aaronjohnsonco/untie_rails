<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h2 class="main-heading latolight">New Post</h2>
		</div>
	</div>
	<div class="row">
		<%= form_for Post.new do |f| %>
		<div class="col-md-8">
			<div class="form-group">
				<%= f.text_field :title, class: "form-control-post-title", placeholder: "Post Title", autofocus: true %>
			</div>
			<div class="form-group">
				<%= f.text_area :body, class: "form-control redactor" %>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<%= f.text_field :author, class: "form-control", value: "Connie Chadwick" %>
			</div>
			<div class="form-group" id="date_picker">
				<%= f.text_field :pub_date, class: "form-control", placeholder: "Publication Date" %>
			</div>
			<%= f.submit "Publish Now", class: "btn btn-pink", name: "publish" %>
			<%= f.submit "Save as Draft", class: "btn btn-green", name: "draft" %>
		</div>
		<% end %>
	</div>
</div>