<div class="container-fluid">
	<div class="dashboard-box-top">
	<div class="row">
		<div class="col-md-12">
			<h2 class="main-heading latolight">FAQ Questions<a href="/dashboard/questions/new"><span class="btn btn-navy pull-right"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></span></a></h2>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="table-responsive">
				<table class="table table-hover">
					<tr>
						<th class="latobold main-text">Question</th>
						<th class="latobold main-text">Status</th>
						<th></th>
					</tr>
					<% for question in @questions %>
					<tr>
						<td class="latoregular"><%= link_to question.name, edit_question_path(question) %></td>
						<% if question.status === "published" %>
							<td class="latobold sky-blue"><%= question.status.capitalize %></td>
							<% elsif question.status === "draft" %>
							<td class="latoregular gray"><%= question.status.capitalize %></td>
							<% end %>
						<td>
							<%= link_to question, method: :delete, data: { confirm: "Are you sure?" } do %>
								<span class="glyphicon glyphicon-remove pull-right" aria-hidden="true"	></span>
							<% end %>
						</td>
					</tr>
					<% end %>
				</table>
				<%= paginate @questions, :theme => 'twitter-bootstrap-3' %>
			</div>
		</div>
	</div>
</div>
</div>