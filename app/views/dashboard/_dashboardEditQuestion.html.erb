<div class="container-fluid">
	<div class="dashboard-box-top">
	<div class="row">
		<div class="col-md-12">
			<h2 class="main-heading latolight sky-blue">Edit Question</h2>
		</div>
	</div>
	<div class="row">
		<%= form_for @question do |f| %>
		<div class="col-md-12">
			<div class="form-group">
				<%= f.text_field :name, class: "form-control-post-title", placeholder: "Question", autofocus: true %>
			</div>
			<div class="form-group">
				<%= f.text_area :answer, class: "form-control redactor", placeholder: "Add answer..." %>
			</div>
			<% if @question.status == "published" %>
					<p class="latobold main-text">Current Status: <span class="sky-blue"><%= @question.status.capitalize %></span></p>
					<%= f.submit "Update Post", class: "btn btn-navy", name: "publish" %>
					<%= f.submit "Unpublish", class: "btn btn-default", name: "draft" %>
				<% elsif @question.status == "draft" %>
					<p class="latobold main-text">Current Status: <span class="light-gray"><%= @question.status.capitalize %></span></p>
					<%= f.submit "Publish Now", class: "btn btn-navy", name: "publish" %>
					<%= f.submit "Update Draft", class: "btn btn-default", name: "draft" %>
				<% end %>
		
	
		</div>
		<% end %>
	</div>
</div>
</div>