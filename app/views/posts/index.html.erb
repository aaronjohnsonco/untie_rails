<% content_for :title, "Blog" %>
<%= render 'partials/navbar' %>
<div class="post-pg">
	<div class="container">
		<div class="row">
			
			
			<div class="col-md-8">
				<% for post in @posts %>
				<div class="post-container">
					<p class="latobold post-detail-top"><%= post.pub_date.strftime('%B') %> <%= post.pub_date.day.ordinalize %> &mdash; <span class="pale-green latoregular"><%= raw tag_links(post.all_tags) %></span></p>
					<h2 class="post-title-index"><%= link_to post.title, post, class: "post-link" %></h2>
					<div class="post-text">
						<%= sanitize(post.body).truncate(300).html_safe %>
					</div>
					<p class="latolight main-text"><%= link_to "Continue reading...", post, class: "read-more" %></p>
				</div>
				<% end %>
			</div>
			<div class="col-md-offset-1 col-md-3">
				<div class="sidebar-container">

					<div class="sidebar-follow">
						<h3 class="latoregular text-center">Follow</h3>
						<p class="text-center">
        		  <%= render 'social' %>
        		</p>
					</div>
					<div class="sidebar-twitter">
						<h3 class="latoregular text-center">Twitter</h3>
						<a class="twitter-timeline" href="https://twitter.com/AttyGirl2014" data-widget-id="626569985880670208">Tweets by @AttyGirl2014</a>
