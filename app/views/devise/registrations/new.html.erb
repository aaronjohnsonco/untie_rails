<div class="login-page">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <div class="sign-in-box">
          <h2 class="latolight text-center caps white">Sign Up</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="form-group">
              <label class="sr-only">Email</label>
              <div class="input-group input-group-lg">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user charcoal" aria-hidden="true"></span></div>
                  <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Full Name" %>
              </div>
            </div>
            <div class="form-group">
              <label class="sr-only">Email</label>
              <div class="input-group input-group-lg">
                <div class="input-group-addon"><span class="glyphicon glyphicon-envelope charcoal" aria-hidden="true"></span></div>
                  <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
              </div>
            </div>
            <div class="form-group">
              <label class="sr-only">Password</label>
              <div class="input-group input-group-lg">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock charcoal" aria-hidden="true"></span></div>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
              </div>
            </div>
            <div class="form-group">
              <label class="sr-only">Password Confimation</label>
              <div class="input-group input-group-lg">
                <div class="input-group-addon"><span class="glyphicon glyphicon-lock charcoal" aria-hidden="true"></span></div>
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
              </div>
            </div>
            <%= f.submit "Sign Up", class: "btn-hero btn-light-blue btn-block" %>


          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>